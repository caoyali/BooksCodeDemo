<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleTopAct">

    <TextView
        android:id="@+id/mTittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:text="singleTopAct"
        />

    <Button
        android:id="@+id/openSingleTopBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开SingleTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mTittle"
        />

    <Button
        android:id="@+id/mOpenNormalBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开普通的"
        app:layout_constraintStart_toEndOf="@id/openSingleTopBtn"
        app:layout_constraintTop_toTopOf="@id/openSingleTopBtn"
        />

</android.support.constraint.ConstraintLayout>